<% if note.persisted? %>
  <div class="note">
    <div>
      <%= tag.span "#{note.title} (#{time_ago_in_words(note.created_at)} ago)", class: "note-title" %>
      <%= link_to "Edit", edit_book_note_path(@book, note) %>
      <%= link_to "Delete", [@book, note], method: :delete %>
    </div>

    <div>
      <%= simple_format note.note %>
    </div>
  </div>
<% end %>
